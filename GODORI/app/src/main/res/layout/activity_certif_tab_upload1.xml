<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CertifTabUpload1Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="업로드"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="14dp" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="330dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Img_Upload"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/certif_un" />

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/certif" />
                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="20dp"
                android:background="#F7F7F7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="타임 스탬프"
                    android:textColor="#000000" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:padding="22dp"
                    android:gravity="center"
                    android:layout_marginTop="15dp">

                    <Button
                        android:id="@+id/time_Btn1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/button_round"
                        android:text="2020/11/23\nPM 15:23"
                        android:textColor="#7C7C7C"/>

                    <Button
                        android:id="@+id/time_Btn2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/time_Btn1"
                        android:background="@drawable/button_round"
                        android:text="2020/11/23\nPM 15:23"
                        android:textColor="#7C7C7C"
                        android:padding="5dp"
                        android:gravity="bottom|center" />

                    <Button
                        android:id="@+id/time_Btn3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/time_Btn2"
                        android:background="@drawable/button_round"
                        android:text="2020/11/23\nPM 15:23"
                        android:textColor="#7C7C7C"
                        android:padding="5dp"
                        android:gravity="top|center" />

                    <Button
                        android:id="@+id/time_Btn4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/time_Btn1"
                        android:background="@drawable/button_round"
                        android:text="2020/11/23\nPM 15:23"
                        android:gravity="bottom"
                        android:padding="5dp"
                        android:textColor="#7C7C7C" />

                    <Button
                        android:id="@+id/time_Btn5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="20dp"
                        android:layout_toLeftOf="@id/time_Btn3"
                        android:layout_below="@+id/time_Btn2"
                        android:background="@drawable/button_round"
                        android:text="2020/11/23\nPM 15:23"
                        android:gravity="bottom|right"
                        android:padding="5dp"
                        android:textColor="#7C7C7C" />

                    <Button
                        android:id="@+id/time_Btn6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/time_Btn2"
                        android:layout_toRightOf="@id/time_Btn5"
                        android:background="@drawable/button_round"
                        android:text="None"
                        android:textAllCaps="false"
                        android:textColor="#7C7C7C" />

                </RelativeLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/next1Btn"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@drawable/button_rectangle"
                android:gravity="center"
                android:text="다음"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>