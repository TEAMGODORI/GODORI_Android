<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradation"
    tools:context=".activity.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘은 운동해야지"
        android:textColor="#ffffff"
        android:textSize="13dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editTextid"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:textSize="16dp"
        android:textColorHint="#ffffff"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:background="@drawable/login_rectangle"
        android:privateImeOptions="defaultInputmode=english"/>
    <!--기본 키보드 영문-->

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:hint="PASSWORD"
        android:textSize="16dp"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/editTextid"
        android:layout_marginTop="17dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPassword"
        android:background="@drawable/login_rectangle"/>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="로그인"
        android:textColor="#6776F0"
        android:background="@drawable/button_login_rectangle"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/editTextTextPassword"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/idFind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        android:textSize="13dp"
        android:textColor="#60ffffff"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="61dp"
        android:layout_below="@+id/loginBtn"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/passwordFind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        android:textSize="13dp"
        android:textColor="#60ffffff"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/idFind"
        android:layout_marginLeft="36dp"
        android:layout_below="@+id/loginBtn"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="13dp"
        android:textColor="#60ffffff"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/passwordFind"
        android:layout_marginLeft="36dp"
        android:layout_below="@+id/loginBtn"
        android:includeFontPadding="false"/>

</RelativeLayout>