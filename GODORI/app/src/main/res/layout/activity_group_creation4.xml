<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.GroupCreation4Activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gr_bg_create">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/btnRecruitingBack"
                android:layout_width="match_parent"
                android:layout_height="54dp">
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/gr_btn_back"
                    android:gravity="center" />
            </androidx.appcompat.widget.Toolbar>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/gr_img_group"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_marginTop="14dp"
                    android:text="그룹 만들기"
                    android:textColor="#b3ffffff"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:includeFontPadding="false"
                    android:text="기본정보를 입력해 주세요"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="34dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="운동 주기"
                    android:textColor="@color/white"
                    android:includeFontPadding="false"
                    android:textStyle="bold"
                    android:textSize="14dp" />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/groupCreation_cycle1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="14dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_uncircle"
                        android:text="1" />

                    <Button
                        android:id="@+id/groupCreation_cycle2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="14dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_uncircle"
                        android:text="2" />

                    <Button
                        android:id="@+id/groupCreation_cycle3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="14dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_uncircle"
                        android:text="3" />

                    <Button
                        android:id="@+id/groupCreation_cycle4"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="14dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_uncircle"
                        android:text="4" />

                    <Button
                        android:id="@+id/groupCreation_cycle5"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="14dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_uncircle"
                        android:text="5" />
                    <Button
                        android:id="@+id/groupCreation_cycle6"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="14dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_uncircle"
                        android:includeFontPadding="false"
                        android:text="6" />
                    <Button
                        android:id="@+id/groupCreation_cycle7"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="14dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_uncircle"
                        android:includeFontPadding="false"
                        android:text="7" />
                </RadioGroup>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:text="운동을 잘하시나요?"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="14dp" />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/groupCreation_intensity1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="14dp"
                        android:background="@drawable/edittext_rounded_corner_rectangle"
                        android:text="상" />
                    <Button
                        android:id="@+id/groupCreation_intensity2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="14dp"
                        android:layout_gravity="center"
                        android:background="@drawable/edittext_rounded_corner_rectangle"
                        android:text="중" />
                    <Button
                        android:id="@+id/groupCreation_intensity3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="14dp"
                        android:layout_gravity="center"
                        android:background="@drawable/edittext_rounded_corner_rectangle"
                        android:text="하" />
                </RadioGroup>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:text="어떤 운동을 선호하시나?"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="14dp" />
                //콘텐츠 정해짐 넣는다
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">
        <Button
            android:id="@+id/gr_next1Btn"
            android:layout_marginHorizontal="32dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/gr_ly_btn_next"
            android:gravity="center"
            android:text="다음"
            android:textSize="14sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>