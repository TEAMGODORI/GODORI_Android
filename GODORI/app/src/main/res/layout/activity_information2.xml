<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Information2Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/identityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="60dp"
            android:text="본인 인증하기"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/identityText"
            android:text="2/2"
            android:textColor="@color/blue"
            android:textSize="16dp" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/identityText"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:max="2"
            android:progress="2"
            android:progressTint="@color/blue" />


        <TextView
            android:id="@+id/nicknameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="50dp"
            android:text="닉네임"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editTextNickname"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nicknameText"
            android:layout_marginLeft="16dp"
            android:backgroundTint="@color/blue"
            android:inputType="text"
            android:privateImeOptions="defaultInputmode=korean" /><!--기본키보드를 한글-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="중복 확인"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_double_check"
            android:layout_below="@+id/nicknameText"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/editTextNickname" />

        <TextView
            android:id="@+id/passwordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextNickname"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="50dp"
            android:text="비밀번호"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordText"
            android:layout_marginLeft="16dp"
            android:backgroundTint="@color/blue"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/passwordText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextPassword"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="50dp"
            android:text="비밀번호 확인"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editTextPassword2"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordText2"
            android:layout_marginLeft="16dp"
            android:backgroundTint="@color/blue"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/next1Btn"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_below="@+id/editTextPassword2"
            android:layout_marginTop="105dp"
            android:background="@drawable/button_rectangle"
            android:gravity="center"
            android:text="완료"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />
    </RelativeLayout>
</LinearLayout>