                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="헬스"
                        android:textColor="@color/ct_text_color" />

                    <CheckBox
                        android:id="@+id/exercise_Btn12"
                        android:layout_width="164dp"
                        android:layout_height="42dp"
                        android:layout_below="@+id/exercise_Btn10"
                        android:layout_toRightOf="@+id/exercise_Btn11"
                        android:background="@drawable/ct_ly_button_exercise_check"
                        android:button="@null"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="자전거"
                        android:textColor="@color/ct_text_color" />

