                        android:textColor="@color/ct_text_color" />

                    <CheckBox
                        android:id="@+id/reviews_Btn3"
                        android:layout_width="164dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="42dp"
                        android:layout_below="@+id/reviews_Btn1"
                        android:background="@drawable/ct_ly_button_exercise_check"
                        android:button="@null"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="시원하게 땀 흘렸어요"
                        android:textColor="@color/ct_text_color" />

                    <CheckBox
                        android:id="@+id/reviews_Btn4"
                        android:layout_width="164dp"
                        android:layout_height="42dp"
                        android:layout_toRightOf="@+id/reviews_Btn3"
                        android:layout_below="@+id/reviews_Btn2"
                        android:background="@drawable/ct_ly_button_exercise_check"
                        android:button="@null"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="쉬엄쉬엄 했어요"
                        android:textColor="@color/ct_text_color" />

                    <CheckBox
                        android:id="@+id/reviews_Btn5"
                        android:layout_width="164dp"
                        android:layout_height="42dp"
