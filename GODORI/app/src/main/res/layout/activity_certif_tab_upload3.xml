                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="헬스"
                        android:textColor="@color/ct_text_color" />

                    <CheckBox
                        android:id="@+id/exercise_Btn8"
                        android:layout_width="164dp"
                        android:layout_height="42dp"
                        android:layout_below="@+id/exercise_Btn6"
                        android:layout_toRightOf="@+id/exercise_Btn7"
                        android:background="@drawable/ct_ly_button_exercise_check"
                        android:button="@null"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="자전거"
                        android:textColor="@color/ct_text_color" />
