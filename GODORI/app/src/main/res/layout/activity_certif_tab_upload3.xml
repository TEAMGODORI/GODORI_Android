                        android:text="2% 부족했어요"
                        android:textColor="@color/ct_text_color" />

                    <CheckBox
                        android:id="@+id/reviews_Btn2"
                        android:layout_width="164dp"
                        android:layout_height="42dp"
                        android:layout_marginTop="24dp"
