                        android:text="축구"
                        android:textColor="@color/ct_text_color" />

                    <CheckBox
                        android:id="@+id/exercise_Btn4"
                        android:layout_width="164dp"
                        android:layout_height="42dp"
                        android:layout_below="@+id/exercise_Btn2"
                        android:layout_toRightOf="@+id/exercise_Btn3"
                        android:background="@drawable/ct_ly_button_exercise_check"
                        android:button="@null"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="필라테스"
                        android:textColor="@color/ct_text_color" />


                    <CheckBox
                        android:id="@+id/exercise_Btn5"
                        android:layout_width="164dp"
                        android:layout_height="42dp"
                        android:layout_below="@+id/exercise_Btn3"
                        android:layout_marginLeft="42dp"
                        android:background="@drawable/ct_ly_button_exercise_check"
                        android:button="@null"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="헬스"
                        android:textColor="@color/ct_text_color" />

                    <CheckBox
                        android:id="@+id/exercise_Btn6"
