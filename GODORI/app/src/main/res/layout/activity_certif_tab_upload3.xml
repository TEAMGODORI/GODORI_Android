                        android:layout_toRightOf="@+id/exercise_Btn5"
                        android:background="@drawable/ct_ly_button_exercise_check"
                        android:button="@null"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="자전거"
                        android:textColor="@color/ct_text_color" />

                    <CheckBox
                        android:id="@+id/exercise_Btn7"
                        android:layout_width="164dp"
                        android:layout_height="42dp"
