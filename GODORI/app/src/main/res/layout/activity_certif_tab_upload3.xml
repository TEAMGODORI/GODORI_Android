                        android:textColor="@color/ct_text_color" />

                    <CheckBox
                        android:id="@+id/exercise_Btn2"
                        android:layout_width="164dp"
                        android:layout_height="42dp"
                        android:layout_marginTop="24dp"
                        android:layout_toRightOf="@+id/exercise_Btn1"
