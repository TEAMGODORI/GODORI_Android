                    <CheckBox
                        android:id="@+id/reviews_Btn6"
                        android:layout_width="164dp"
                        android:layout_height="42dp"
                        android:layout_toRightOf="@+id/reviews_Btn5"
                        android:layout_below="@+id/reviews_Btn4"
                        android:background="@drawable/ct_ly_button_exercise_check"
                        android:button="@null"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="내일 열심히 할래요"
                        android:textColor="@color/ct_text_color" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
