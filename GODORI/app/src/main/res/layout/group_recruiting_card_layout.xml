<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="178dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvGroupMore"
    android:layout_marginBottom="4dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="4dp"
    android:clickable="true"
    android:focusable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_GroupRecruitingCard_Top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="14dp"
            >

            <TextView
                android:id="@+id/tvGroupRecruitingCard_Categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="헬스"
                android:textColor="@color/main"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvGroupRecruitingCard_GroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvGroupRecruitingCard_Categories"
                android:text="고도리"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvGroupRecruitingCard_GroupInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvGroupRecruitingCard_GroupName"
                android:text="헬린이들 모여요"
                android:textColor="#3C3C3C"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvGroupRecruitingCard_Routine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/tvGroupRecruitingCard_GroupInfo"
                android:text="주4회"
                android:layout_marginRight="8dp"
                android:textColor="#939393"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tvGroupRecruitingCard_Degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@+id/tvGroupRecruitingCard_Routine"
                android:layout_below="@+id/tvGroupRecruitingCard_GroupInfo"
                android:text="중"
                android:textColor="#939393"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvGroupRecruitingCard_WorkingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvGroupRecruitingCard_GroupInfo"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/tvGroupRecruitingCard_Degree"
                android:text="20분"
                android:textColor="#939393"
                android:textSize="14dp" />
        </RelativeLayout>

    <!--        구분선-->
        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_GroupRecruitingCard_Top"
        android:background="#F0F0F0"/>




    <RelativeLayout
        android:id="@+id/rl_GroupRecruitingCard_Bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="14dp">


        <TextView
            android:id="@+id/tvGroupRecruitingCard_CountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모집인원"
            android:textColor="#3C3C3C"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/tvGroupRecruitingCard_Count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/tvGroupRecruitingCard_CountTitle"
            android:text="5/13"
            android:textStyle="bold"
            android:textColor="@color/main"
            android:textSize="14dp" />


        <Button
            android:id="@+id/btnMoreGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="참여하기"
            android:textStyle="bold"
            android:background="@color/transparent"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_alignParentRight="true"
            android:includeFontPadding="false"
            android:textColor="#3C3C3C"
            android:textSize="11dp" />



    </RelativeLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>