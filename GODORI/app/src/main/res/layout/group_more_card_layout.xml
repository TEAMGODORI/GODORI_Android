<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android2="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_groupmore"
    android:layout_width="151dp"
    android:layout_height="170dp"
    android:layout_marginRight="10dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="9dp"
    android2:background="@drawable/group_more_outline"
    android:clickable="true"
    android:focusable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android2:background="@drawable/group_more_outline">
        <RelativeLayout
            android:id="@+id/rl_GroupMoreWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginHorizontal="16dp">
            <TextView
                android:id="@+id/GroupMoreCard_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="헬스"
                android:includeFontPadding="false"
                android:textColor="@color/main"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/GroupMoreCard_groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고도리"
                android:includeFontPadding="false"
                android:textColor="#3C3C3C"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_below="@+id/GroupMoreCard_category"/>
            <TextView
                android:id="@+id/GroupMoreCard_groupInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="헬린이들 모여요~"
                android:includeFontPadding="false"
                android:textColor="#3C3C3C"
                android:textSize="14dp"
                android:layout_below="@+id/GroupMoreCard_groupName"/>
            <TextView
                android:id="@+id/GroupMoreCard_routine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:includeFontPadding="false"
                android:text="주3회"
                android:textColor="#939393"
                android:textSize="12dp"
                android:layout_below="@+id/GroupMoreCard_groupInfo"/>
            <TextView
                android:id="@+id/GroupMoreCard_intensity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/GroupMoreCard_groupInfo"
                android:includeFontPadding="false"
                android:layout_toRightOf="@+id/GroupMoreCard_routine"
                android:paddingTop="6dp"
                android:paddingHorizontal="8dp"
                android:text="중"
                android:textColor="#939393"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/GroupMoreCard_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/GroupMoreCard_groupInfo"
                android:includeFontPadding="false"
                android:layout_toRightOf="@+id/GroupMoreCard_intensity"
                android:paddingTop="6dp"
                android:text="30분"
                android:textColor="#939393"
                android:textSize="12dp" />
            <View
                android:id="@+id/GroupMoreCard_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/GroupMoreCard_time"
                android:layout_marginVertical="12dp"
                android:background="#707070"/>
            <TextView
                android:id="@+id/GroupMoreCard_recruitInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모집인원"
                android:textColor="#3C3C3C"
                android:includeFontPadding="false"
                android:textSize="12dp"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/GroupMoreCard_line"/>
            <TextView
                android:id="@+id/GroupMoreCard_recruitNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:layout_below="@+id/GroupMoreCard_line"
                android:layout_toRightOf="@id/GroupMoreCard_recruitInfo"
                android:paddingLeft="7dp"
                android:text="5/13"
                android:textStyle="bold"
                android:textColor="@color/main"
                android:textSize="14dp"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>