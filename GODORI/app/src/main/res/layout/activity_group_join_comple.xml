<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GroupJoinCompleActivity">

    <ImageView
        android:layout_width="315dp"
        android:layout_height="275dp"
        android:id="@+id/img_group"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_group_main"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/join_text"
        android:text="그룹 가입 완료"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_group"
        android:layout_marginTop="34dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/join_text2"
        android:text="고도리"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/join_text"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/join_text3"
        android:text="그룹원들과 운동한 내용을 공유하면서\n건강한 삶을 위해 화이팅 하세요 !"
        android:textSize="11dp"
        android:textColor="#4D4D4D"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/join_text2"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/next1Btn"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/button_rectangle"
        android:gravity="center"
        android:text="그룹 바로 가기"
        android:layout_marginTop="150dp"
        android:layout_below="@+id/join_text3"
        android:textColor="#FFFFFF" />

</RelativeLayout>